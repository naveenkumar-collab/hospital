rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ----------------------------------------------------------------------
    // Helper Functions
    // ----------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      // In a real app, this would be: return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
      // For this demo, we grant admin rights to any signed-in user for ease of use.
      return isSignedIn();
    }

    function isDoctor() {
      // In a real app, this would be: return exists(/databases/$(database)/documents/roles_doctor/$(request.auth.uid));
       // For this demo, we grant doctor rights to any signed-in user for ease of use.
      return isSignedIn();
    }

    function isStaff() {
      return exists(/databases/$(database)/documents/staff/$(request.auth.uid));
    }

    // ----------------------------------------------------------------------
    // Role-Defining Collections (Should be Admin-managed server-side)
    // ----------------------------------------------------------------------

    match /roles_admin/{staffId} {
      allow read, write: if false; 
    }

    match /roles_doctor/{staffId} {
      allow read, write: if false;
    }

    // ----------------------------------------------------------------------
    // Main Collections
    // ----------------------------------------------------------------------

    match /patients/{patientId} {
      allow create: if isOwner(patientId);
      allow read, update: if isOwner(patientId) || isDoctor() || isAdmin();
      allow delete: if isAdmin();

      // Subcollections for Patient
      match /bills/{billId} {
         allow read: if isOwner(patientId) || isAdmin();
         allow create, update, delete: if isAdmin();
      }
      match /medicalRecords/{recordId} {
        allow read: if isOwner(patientId) || isDoctor() || isAdmin();
        allow create, update: if isDoctor() || isAdmin();
        allow delete: if isAdmin();
      }
    }
    
    match /staff/{staffId} {
      allow create: if isOwner(staffId);
      allow read, update: if isOwner(staffId) || isAdmin();
      allow delete: if isAdmin();
    }

    match /departments/{departmentId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }

    match /appointments/{appointmentId} {
      allow read: if isOwner(resource.data.patientId) || isOwner(resource.data.staffId) || isAdmin();
      allow create: if isSignedIn();
      allow update: if isOwner(resource.data.patientId) || isOwner(resource.data.staffId) || isAdmin();
      allow delete: if isAdmin();
    }

    match /services/{serviceId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }
    
    match /notifications/{notificationId} {
       allow get: if isOwner(resource.data.recipientStaffId) || isAdmin();
       allow list: if isAdmin(); // Users must query for their own
       allow create: if isStaff();
       allow update, delete: if isOwner(resource.data.recipientStaffId) || isAdmin();
    }
    
    // Collection group queries
    match /{path=**}/bills/{billId} {
      allow read: if isAdmin();
    }
  }
}
